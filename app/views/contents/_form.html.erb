<%= form_for @content, html: {multipart: true} do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :carica_il_contenuto %>
    <br>
    <%= form.file_field :allegato %>
  </div>
  <br>
  <div class="field">
    <%= form.label :titolo %>
    <%= form.text_field :titolo %>
  </div>

  <div class="field">
    <%= form.label :descrizione %>
    <%= form.text_area :descrizione, class: 'materialize-textarea' %>
  </div>

  <div class="field">
    <%= form.label :prezzo_min_50_cent %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :carica_immagine_da_utilizzare_come_cover %>
    <br>
    <%= form.file_field :cover %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit 'Salva Contenuto', class: 'btn' %>
  </div>
<% end %>
